<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileDetails">
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:textColor="#000"
            android:text="Personal Details"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp"
            android:fontFamily="@font/arial_rounded"/>

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/activity_profile_profile_display_picture"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginTop="50dp"
            app:civ_border_width="0dp"
            android:src="@drawable/profile"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Change Display Picture"
            android:textStyle="italic"
            android:textColor="@color/design_default_color_primary_dark"
            android:gravity="center"/>

        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/user"
            android:hint="Username"
            android:paddingStart="10dp"
            android:background="@drawable/text_layout_stroke_normal"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textSize="20sp"
            android:drawablePadding="20dp"
            android:layout_marginTop="30dp"/>



        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/mail_new"
            android:hint="Email"
            android:paddingStart="10dp"
            android:background="@drawable/text_layout_stroke_normal"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textSize="20sp"
            android:inputType="textEmailAddress"
            android:drawablePadding="20dp"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/phone1"
            android:hint="Phone Number"
            android:paddingStart="10dp"
            android:background="@drawable/text_layout_stroke_normal"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textSize="20sp"
            android:inputType="text"
            android:drawablePadding="20dp"
            android:layout_marginTop="15dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:textColor="#000"
            android:text="Business Details"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="40dp"
            android:fontFamily="@font/arial_rounded"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/three"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent">
        <EditText
            android:id="@+id/profile_details_business_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="15dp"
            android:hint="Business Name"
            android:textSize="20sp"
            android:inputType="text"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/four"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent">
        <EditText
            android:id="@+id/profile_details_business_GSTIN_number"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="GSTIN Number"
            android:paddingLeft="15dp"
            android:textSize="20sp"
            android:inputType="text"
            />

        </android.support.design.widget.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textSize="20sp"
            android:text="Industry: "
            android:drawablePadding="20dp"
            android:layout_marginTop="15dp"/>

        <Spinner
            android:id="@+id/profile_details_business_type"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingStart="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textSize="20sp"
            android:entries="@array/industry"
            android:layout_marginTop="15dp"
            android:background="@drawable/text_layout_stroke_normal"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textSize="20sp"
            android:text="Business Scale: "
            android:drawablePadding="20dp"
            android:layout_marginTop="15dp"/>

        <Spinner
            android:id="@+id/profile_details_business_scale"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingStart="10dp"
            android:entries="@array/scale"
            android:background="@drawable/text_layout_stroke_normal"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textSize="20sp"
            android:drawablePadding="20dp"
            android:layout_marginTop="15dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textSize="20sp"
            android:text="Nature of Business: "
            android:drawablePadding="20dp"
            android:layout_marginTop="15dp"/>

        <Spinner
            android:id="@+id/profile_details_business_nature"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingStart="10dp"
            android:entries="@array/nature"
            android:background="@drawable/text_layout_stroke_normal"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textSize="20sp"
            android:drawablePadding="20dp"
            android:layout_marginTop="15dp"/>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/five"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent">
        <EditText
            android:id="@+id/profile_details_business_city"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="City"
            android:paddingStart="15dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textSize="20sp"
            android:inputType="text"
            android:layout_marginTop="15dp"/>
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/six"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent">
        <EditText
            android:id="@+id/profile_details_haves"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="top"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:hint="What do you Have"
            android:layout_marginTop="30dp"
            android:inputType="textMultiLine"
            android:overScrollMode="always"
            android:padding="15dp"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/seven"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent">
        <EditText
            android:id="@+id/profile_details_wants"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="top"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:hint="What do you Ask"
            android:layout_marginTop="30dp"
            android:inputType="textMultiLine"
            android:overScrollMode="always"
            android:padding="15dp"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/profile_details_btn_update"
            android:text="Update"
            android:elevation="10dp"
            android:fontFamily="@font/arial_rounded"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/text_layout_stroke_normal"
            android:layout_marginTop="30dp"
            android:textSize="20sp"
            android:layout_marginBottom="50dp"
            android:layout_width="match_parent"
            android:textAllCaps="false"
            android:layout_height="50dp" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>



</RelativeLayout>